@model FYP1ManagementSystem.Models.SupervisorRegisterViewModel

@{
    ViewData["Title"] = "Create Supervisor";
}

<div class="container mt-5" style="max-width: 800px;">
    <div class="my-card">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="mb-0">Create New Supervisor</h3>
            <a href="/Admin/ManageSupervisors" class="btn btn-outline-secondary btn-sm">← Back</a>
        </div>

        <form asp-action="CreateSupervisor" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="UserName" class="my-form-label">Username</label>
                    <input asp-for="UserName" class="form-control my-input" placeholder="e.g. johndoe" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="my-form-label">Email</label>
                    <input asp-for="Email" class="form-control my-input" placeholder="e.g. john@example.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="FullName" class="my-form-label">Full Name</label>
                    <input asp-for="FullName" class="form-control my-input" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Faculty" class="my-form-label">Faculty</label>
                    <input asp-for="Faculty" class="form-control my-input" />
                    <span asp-validation-for="Faculty" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="AcademicProgram" class="my-form-label">Academic Program</label>
                    <select asp-for="AcademicProgram" class="form-select my-input">
                        <option value="">-- Select Program --</option>
                        <option>Data Engineering</option>
                        <option>Software Engineering</option>
                    </select>
                    <span asp-validation-for="AcademicProgram" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Password" class="my-form-label">Password</label>
                    <div class="input-group">
                        <input asp-for="Password" class="form-control my-input" type="password" id="Password" />
                        <button type="button" class="btn btn-outline-secondary" onclick="togglePasswordVisibility('Password')">👁</button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="ConfirmPassword" class="my-form-label">Confirm Password</label>
                    <div class="input-group">
                        <input asp-for="ConfirmPassword" class="form-control my-input" type="password" id="ConfirmPassword" />
                        <button type="button" class="btn btn-outline-secondary" onclick="togglePasswordVisibility('ConfirmPassword')">👁</button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn my-btn my-btn-primary w-100">Create Supervisor</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
