@model FYP1ManagementSystem.Models.ProposalViewModel

@{
    ViewData["Title"] = "Submit Proposal";
}

<div class="container mt-4">
    <div class="my-card">
        <h3 class="text-primary mb-4">Submit Your Proposal</h3>

        <form asp-action="SubmitProposal" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label">Proposal Title</label>
                <input asp-for="Title" class="form-control" placeholder="Enter your project title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProjectType" class="form-label">Project Type</label>
                <select asp-for="ProjectType" class="form-select">
                    <option value="">-- Select Type --</option>
                    <option>Research</option>
                    <option>Development</option>
                </select>
                <span asp-validation-for="ProjectType" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="UploadedFile" class="form-label">Upload Signed Proposal Form (PDF)</label>
                <input asp-for="UploadedFile" type="file" accept=".pdf" class="form-control" />
                <small class="form-text text-muted">Only PDF format is accepted.</small>
                <span asp-validation-for="UploadedFile" class="text-danger"></span>
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-primary">Submit Proposal</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
