@model FYP1ManagementSystem.Models.ProposalViewModel

<h2>Submit Your Proposal</h2>

<form asp-action="SubmitProposal" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProjectType">Project Type</label>
        <select asp-for="ProjectType" class="form-control">
            <option value="">-- Select Type --</option>
            <option>Research</option>
            <option>Development</option>
        </select>
        <span asp-validation-for="ProjectType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UploadedFile">Upload Signed Proposal Form (PDF)</label>
        <input asp-for="UploadedFile" type="file" class="form-control" />
        <span asp-validation-for="UploadedFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
