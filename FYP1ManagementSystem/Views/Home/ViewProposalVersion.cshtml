@model FYP1ManagementSystem.Models.Proposal

@{
    ViewData["Title"] = "Proposal Details (Version)";
}

<div class="container mt-4">
    <div class="my-card">
        <h3 class="mb-4 text-primary">Proposal Detail (Version)</h3>

        <table class="table table-bordered align-middle">
            <tr>
                <th style="width: 200px;">Student</th>
                <td>@Model.Student.FullName</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>@Model.Title</td>
            </tr>
            <tr>
                <th>Project Type</th>
                <td>@Model.ProjectType</td>
            </tr>
            <tr>
                <th>Submitted At</th>
                <td>@Model.SubmittedAt.ToString("f")</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>
                    @if (Model.Status == "Approved")
                    {
                        <span class="badge bg-success">@Model.Status</span>
                    }
                    else if (Model.Status == "Approved with Condition")
                    {
                        <span class="badge bg-warning text-dark">@Model.Status</span>
                    }
                    else if (Model.Status == "Rejected")
                    {
                        <span class="badge bg-danger">@Model.Status</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@Model.Status</span>
                    }
                </td>
            </tr>
            <tr>
                <th>📄 PDF</th>
                <td>
                    @if (!string.IsNullOrEmpty(Model.PdfPath))
                    {
                        <a href="@Model.PdfPath" class="btn btn-sm btn-outline-primary" target="_blank">📥 View</a>
                        <a href="@Model.PdfPath" download class="btn btn-sm btn-outline-success ms-2">⬇️ Download</a>
                    }
                    else
                    {
                        <span class="text-muted">No file uploaded</span>
                    }
                </td>
            </tr>
            <tr>
                <th>Supervisor Comments</th>
                <td>@(string.IsNullOrEmpty(Model.SupervisorComments) ? "<em>(None)</em>" : Model.SupervisorComments)</td>
            </tr>
            <tr>
                <th>Evaluator 1</th>
                <td>
                    <strong>@(Model.Evaluation1Status ?? "-")</strong>
                    <br />
                    <span>@(Model.Evaluator1Comment ?? "(No comment)")</span>
                </td>
            </tr>
            <tr>
                <th>Evaluator 2</th>
                <td>
                    <strong>@(Model.Evaluation2Status ?? "-")</strong>
                    <br />
                    <span>@(Model.Evaluator2Comment ?? "(No comment)")</span>
                </td>
            </tr>
        </table>

        <div class="text-end">
            <a asp-action="ProposalHistory" class="btn btn-outline-secondary">← Back to History</a>
        </div>
    </div>
</div>
